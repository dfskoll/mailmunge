EMBPERLLDFLAGS=@EMBPERLLDFLAGS@
EMBPERLLIBS=@EMBPERLLIBS@
LIBS_WITHOUT_PTHREAD=@LIBS_WITHOUT_PTHREAD@
LIBS=@LIBS@
LDFLAGS=@LDFLAGS@
