DEFS=-D_POSIX_PTHREAD_SEMANTICS \
	@EMBPERLDEFS@ \
	@ENABLE_DEBUGGING@ -DPERL_PATH=\"@PERL@\" \
	-DVERSION=\"@PACKAGE_VERSION@\" \
	-DSPOOLDIR=\"@SPOOLDIR@\" \
	-DQDIR=\"@QDIR@\" \
	-DSENDMAIL=\"@SENDMAILPROG@\" \
