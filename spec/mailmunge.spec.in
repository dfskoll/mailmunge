%pre -n mailmunge
getent group mailmunge >/dev/null || groupadd --system mailmunge
getent passwd mailmunge >/dev/null || \
  useradd --system -g mailmunge -d /var/spool/mailmunge -s /sbin/nologin -c "Mailmunge user" mailmunge
exit 0


%preun -n mailmunge
# Package removal, not upgrade
%systemd_preun mailmunge.service


%postun -n mailmunge
# Package upgrade, not uninstall
%systemd_postun_with_restart mailmunge.service


